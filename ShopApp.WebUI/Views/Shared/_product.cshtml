@model Product

<div class="col-md-4">
    <div class="card">
        <img src="~/img/@Model.ImageUrl" alt="@Model.Name"/>
        <div class="card-body"></div>
             <h4 class="card-title">
                 <a href="#">@Model.Name</a>
             </h4>
             <small class="text.muted">
                 <i class="fas fa-dollar-sign"></i>
             </small>
    </div>
</div>
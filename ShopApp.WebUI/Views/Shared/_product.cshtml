@model Product

<div class="col-md-4">
    <div class="card">
        <img src="~/img/@Model.ImageUrl" alt="@Model.Name"/>
        <div class="card-body"></div>
             <h4 class="card-title">
                 <a href="#">@Model.Name</a>
             </h4>
             <small class="text.muted">
                 <i class="fas fa-dollar-sign"></i> @Model.Price
             </small>
             <div class="card-footer text-center">
                 <a href="#" class="btn btn-outline-primary-sm">content</a>
                 <a href="#" class="btn btn-outline-primary-sm ml-3">Add to Cart</a>
             </div>
    </div>
</div>
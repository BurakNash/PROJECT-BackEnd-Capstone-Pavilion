
@{
    ViewData["Title"] = "CreateProduct";
}

<h1>CreateProduct</h1>
<hr />

<div class="row">
    <div class="col-md-8">

        <form asp-controller="Admin" asp-action="CreateProduct" method="post"></form>
        <div class="form-group-row">
            <label class="col-md-2 col-form-label">Product Name</label>
            <div class="col-md-10">
                <input type="text" name="name" value="" class="form-control" />
            </div>
        </div>
        <div class="form-group-row">
            <label class="col-md-2 col-form-label">Image Url</label>
            <div class="col-md-10">
                <input type="text" name="ImageUrl" value="" class="form-control" />
            </div>
        </div>
        <div class="form-group-row">
            <label class="col-md-2 col-form-label">Description</label>
            <div class="col-md-10">
                <textarea id="editor" name="Description" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group-row">
            <label class="col-md-2 col-form-label">Price</label>
            <div class="col-md-10">
                <input type="text" name="Price" value="" class="form-control" />
            </div>
        </div>
        <div class="form-group-row">
            <div class="col-md-10 offset-md-2">
                <button type="submit" value="Save Product" class="btn btn-primary"> Create </button>
            </div>
        </div>
    </div>
</div>

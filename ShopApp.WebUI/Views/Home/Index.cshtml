@model ShopApp.WebUI.Models.ProductListModel

    <div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item">Phones</li>
                <li class="list-group-item">Computers</li>
                <li class="list-group-item">Electronics</li>
            </ul>
        </div>

        <div class="col-md-9">

            <partial name="_slider" />

            <div class="row mt-3">

                @foreach (var product in Model.Products)
                {
                    <partial name="_product" for="@product" />
                }
            </div>
        </div>
    </div>


